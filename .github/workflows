name: Build App
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
      - name: Install dependencies
        run: |
          npm install
          npm run build-linux
          npm run build-windows
      - name: Upload artifacts
        uses: actions/upload-artifact@v3
        with:
          name: apps
          path: *.zip
